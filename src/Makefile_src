zcash_cli_DEPENDENCIES = $(LIBBITCOIN_CLI) $(LIBUNIVALUE) \
	$(LIBBITCOIN_UTIL) $(am__DEPENDENCIES_3)  $(LIBZCASH) \
	$(LIBSNARK) $(LIBBITCOIN_CRYPTO) 




